.widget
  .author-info
    a.info-avatar(href='/about/', title= __('about'))
      img(src=theme.info.avatar)
    p #{theme.info.discription}
    - for (var i in theme.info.outlinkitem)
      a.info-icon(href=theme.info.outlinkitem[i].outlink, title=theme.info.outlinkitem[i].message, target='_blank', style='margin-inline:5px')
        if theme.info.outlinkitem[i].name == 'medium'
          i.fa-brands(class='fa-' + theme.info.outlinkitem[i].name, style='margin-inline:5px')
        else if theme.info.outlinkitem[i].name == 'envelope'
          i.fa-solid(class='fa-square-envelope', style='margin-inline:5px')
        else if theme.info.outlinkitem[i].name == 'rss'
          i.fa-solid(class='fa-square-rss', style='margin-inline:5px')
        else
          i.fa-brands(class='fa-square-' + theme.info.outlinkitem[i].name, style='margin-inline:5px')